<body>
<!--creating a feedback for -->
    <div class="feedbackform">
        <h2>Thanks for Visiting!</h2>
        <div class="feedbackform">
            <form action="mailto:eshal.arif@ontariotechu.net" method="post" enctype="text/plain" name="form">
                <p>
                    <label for="name">Name</label>
                    <!--adding validation rules-->
                    <input type="text" name="name" size="32" required>

                </p>

                <p>
                    <label for="email">Email</label>
                    <input name="email" type="email" size="60" required>
                </p>

                <p>
                    <label for="comments">Comments?</label><br>
                    <textarea name="comments" cols="70" rows="8"></textarea>
                </p>

                <p>
                    <label for="who">What describes your occupation? (optional) </label>
                    <select name="who">
                        <option value="Search engine">Student</option>
                        <option value="Word of mouth">Professor</option>
                        <option value="University TA">University TA</option>
                        <option value="Other">Other</option>
                    </select>
                </p>
                <!--creating a submit and reset button for interactivity of the user-->
                <p><input type="submit" value="Click here to submit the form" /></p>
                <p><input type="reset" value="Click here to reset the form" /></p>

        </div>
    </div>
    </form>

